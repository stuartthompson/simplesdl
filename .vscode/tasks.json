{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build (Linux)",
            "type": "shell",
            "command": "g++",
            "args": [
                "main.cpp",
                "-D_REENTRANT",
                "-I/usr/include/SDL2",
                "-lSDL2",
                "-o",
                "threedee"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build (OSX)",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-D_THREAD_SAFE",
                "-I/usr/local/include/SDL2",
                "-L/usr/local/lib",
                "-lsdl2",
                "-std=c++11",
                "-o",
                "sdl",
                "main.cpp"
            ]
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "rm",
            "args": [
                "threedee"
            ]
        }
    ]
}